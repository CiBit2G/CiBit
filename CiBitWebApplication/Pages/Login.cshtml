@page
@model CiBitWebApplication.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container h-100 center-block" style="height:460px">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="~/images/CIBIT LOGO.gif" alt="Log" width="200" >
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-page-handler="ProcessRequest" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                        </div>
                        <input type="text" class="form-control input_user" asp-for="LoginRequest.CibitId" placeholder="CiBit ID">
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                        </div>
                        <input type="password" class="form-control input_pass" asp-for="LoginRequest.Password" placeholder="Password">
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="submit" name="button" style="color:black" class="btn">Login</button>
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <span>@Model.ErrorMsg</span>
                    </div>
                </form>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Don't have an account? <a asp-page="UserRegistration" class="ml-2">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
