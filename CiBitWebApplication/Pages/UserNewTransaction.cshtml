@page
@model CiBitWebApplication.Pages.UserNewTransactionModel
@{
    ViewData["Title"] = "AddTransaction";
    ViewData["User"] = "User";
    ViewData["Token"] = Model.Token;

}

<div style="height:460px">
    <h1>Transaction</h1>
    <form>
        <table>
            <tr>
                <td>
                    <span>Sent to [CiBit ID]:</span>
                </td>
                <td>
                    <input type="text" name="receiver" class="input-group-text">
                </td>
            </tr>
            <tr>
                <td>
                    <span>Research:</span>
                </td>
                <td>
                    <input type="text" name="research" class="input-group-text">
                </td>
            </tr>
            <tr>
                <td>
                    <span>Amount:</span>
                </td>
                <td>
                    <input type="text" name="amount" class="input-group-text">
                </td>
            </tr>
        </table>
        <div class="form-group">
        </div>
        <div class="d-flex center-block login_container">
            <button type="submit" name="button" style="color:black" class="btn">Send</button>
        </div>
    </form>
</div>

