@page
@model CiBitWebApplication.Pages.UserHomeModel
@{
    ViewData["Title"] = "Home";
    ViewData["User"] = "User";
    ViewData["Token"] = Model.Token;

    while (Model.Loading )
    {
    }
}
<style>
    .wrap-div {
        height: 460px;
    }
    .personl-info {
        left: 100px;
        height: 460px
    }
    .balance-info {
        height: 100px;
        left: 300px
    }
    .span-info {
        width: 100px;
        font-size: 20px
    }
</style>
<div class="wrap-div">
    <div class="personl-info">
        <table>
            <tr>
                <td>
                    <div>
                        <h6>Name: </h6>
                    </div>
                </td>
                <td>
                    <div>
                        <h6>@Model.FullName</h6>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        <h6>Email: </h6>
                    </div>
                </td>
                <td>
                    <div>
                        <h6>@Model.UserTransation.user.Email</h6>
                    </div>
                </td>
            </tr>
        </table>
        <div class="balance-info">
            <span class="span-info">Balance: </span>
            <span class="span-info">@Model.UserTransation.user.CitationAmount</span>
            <i class="glyphicon glyphicon-bitcoin"></i>
        </div>
        <div>
            <table id="myTable" class="table" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.Transaction.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction.Receiver)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction.Research)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction.Status)

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{foreach (var item in Model.UserTransation.TransactionList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Receiver)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Research)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
