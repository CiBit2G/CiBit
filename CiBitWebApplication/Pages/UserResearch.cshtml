@page
@model CiBitWebApplication.Pages.UserResearchModel
@{
    ViewData["Title"] = "AddResearch";
    ViewData["User"] = "User";
    ViewData["Token"] = Model.Token;
    var token = Model.Token;
}
<style>
    .wrap-div{
        height:460px;
    }
    .info-td {
        color: black;
    }

    .btn {
        color: black;
        width: 150px;
    }

    .error-td {
        color: red;
    }
    .wrap-title, .wrap-div .wrap-btn {
        display: flex;
        justify-content: center;
    }
    .wrap-form{
        margin:auto;
    }
    .description {
        height:300px;
    }
    .input-group-text{
        margin: 8px 0px;
        width:600px;
    }
    .wrap-div .wrap-btn{
        margin-right:355px;
    }
</style>

<div class="wrap-div">
    <div class="wrap-title">
        <h1>Add new research</h1>
    </div>
    <form asp-page-handler="ProcessRequest" method="post">
        <table class="wrap-form">
            <tr class="hidden">
                <td class="info-td">
                    <input type="text" asp-for="PostToken" value="@token" class="input-group-text" disabled="disabled">
                </td>
                <td class="error-td">
                    <label>@Model.ErrorMsgRsch</label>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Research Title: </span>
                </td>
                <td class="info-td">
                    <input type="text" asp-for="ResearchName" class="input-group-text">
                </td>
                <td class="error-td">
                    <label>@Model.ErrorMsgRsch</label>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Abstract: </span>
                </td>
                <td class="info-td">
                    <input type="text" asp-for="Abstract" class="input-group-text description">
                </td>
            </tr>
        </table>
        <div class="form-group">
        </div>
        <div class="d-flex center-block login_container wrap-btn">
            <button type="submit"  class="btn">Submit</button>
        </div>
    </form>
</div>



